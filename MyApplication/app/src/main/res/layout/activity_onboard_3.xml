<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageViewOnboard"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:background="#FEFEFE"
        android:scaleX="1.2"
        android:scaleY="1.8"
        android:src="@drawable/onboard_image2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewOnboard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="437dp"
        android:layout_marginRight="33dp"
        android:gravity="center_horizontal|top"
        android:text="People donâ€™t take trips, trips take people"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/textViewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="552dp"
        android:layout_marginRight="36dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="5sp"
        android:text="We give you a supermassive service!"
        android:textColor="#666666"
        android:textSize="16sp"
        android:translationY="-2.72sp" />

    <LinearLayout
        android:id="@+id/indicatorContainer"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <!-- Add indicators here -->
    </LinearLayout>


    <Button
        android:id="@+id/buttonGetStarted"
        android:layout_width="378dp"
        android:layout_height="55dp"
        android:layout_below="@id/indicatorContainer"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4F6BED"
        android:text="Next"
        android:textColor="#FFFFFF" />

</RelativeLayout>
